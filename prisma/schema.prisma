generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
model Prof {
  id     Int      @id @default(autoincrement())
  nom    String
  cours  Cours[]
}

model Etudiant {
  id     Int      @id @default(autoincrement())
  nom    String
  cours  Cours[]
}

model Cours {
  id         Int        @id @default(autoincrement())
  titre      String
  profId     Int
  prof       Prof       @relation(fields: [profId], references: [id])
  etudiants  Etudiant[]
}